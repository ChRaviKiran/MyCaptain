package simplejava;

import java.util.Scanner; 

public class Simplejava 
{
    public static void main(String[] args) 
    {
        System.out.println("Input the number of minutes:");
        int n; // n = no. of minutes provided.
        Scanner s = new Scanner(System.in);
        n = s.nextInt();
        int y,d;
        y = n/(365*24*60);
        d = n/(24*60) - y*365;
        System.out.println(n+" minutes is approximately equal to "+y+" years "+d+" days."); 
    }
    
}
